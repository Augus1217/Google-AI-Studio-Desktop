{
  "name": "google-ai-studio-desktop",
  "version": "1.0.0",
  "description": "Unofficial Google AI Studio Desktop Client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.google.ai.studio.desktop",
    "productName": "Google AI Studio",
    "linux": {
      "icon": "icon.png",
      "target": [
        "AppImage",
        "deb",
        "snap"
      ],
      "category": "Development"
    },
    "snap": {
      "grade": "devel",
      "confinement": "devmode",
      "plugs": [
        "default",
        "network",
        "desktop",
        "desktop-legacy",
        "x11",
        "wayland",
        "opengl",
        "browser-support",
        "audio-playback",
        "home",
        "removable-media"
      ],
      "environment": {
        "DISABLE_WAYLAND": "1",
        "WAYLAND_DISPLAY": ""
      }
    },
    "win": {
      "icon": "icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "icon.png",
      "category": "public.app-category.developer-tools",
      "target": [
        "zip"
      ]
    }
  },
  "keywords": [],
  "author": "Augus <imlindora@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "dmg-license": "^1.0.11",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  }
}
